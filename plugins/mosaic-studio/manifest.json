{
  "id": "mosaic-studio",
  "name": "Mosaic Studio",
  "version": "1.0.0",
  "description": "Convert images to LEGO mosaics",
  "entry": "mosaic-studio.js",
  "ui": {
    "tools": [
      {
        "id": "file-upload",
        "type": "file",
        "accept": "image/*"
      },
      {
        "id": "width",
        "type": "range",
        "label": "Width",
        "min": 16,
        "max": 128,
        "default": 48
      },
      {
        "id": "colors",
        "type": "range",
        "label": "Colors",
        "min": 2,
        "max": 48,
        "default": 20
      },
      {
        "id": "mosaic-palette",
        "type": "select",
        "label": "Palette",
        "options": [
          {"value": "opaque", "label": "Opaque"},
          {"value": "all", "label": "All Colors"},
          {"value": "transparent", "label": "Transparent"},
          {"value": "metallic", "label": "Metallic"},
          {"value": "chrome", "label": "Chrome"},
          {"value": "pearl", "label": "Pearl"},
          {"value": "glitter", "label": "Glitter"},
          {"value": "glow", "label": "Glow in Dark"}
        ]
      },
      {
        "id": "dither",
        "type": "select",
        "label": "Dither",
        "options": [
          {"value": "floyd-steinberg", "label": "Floyd-Steinberg"},
          {"value": "jarvis", "label": "Jarvis"},
          {"value": "atkinson", "label": "Atkinson"},
          {"value": "none", "label": "None"}
        ]
      }
    ]
  }
}