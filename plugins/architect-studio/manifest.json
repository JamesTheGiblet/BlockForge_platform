{
  "id": "architect-studio",
  "name": "Architect Studio",
  "version": "1.0.0",
  "description": "Transform house photos into 3D brick facades",
  "entry": "architect-studio.js",
  "ui": {
    "tools": [
      {
        "id": "file-upload",
        "type": "file",
        "accept": "image/*",
        "label": "House Photo"
      },
      {
        "id": "detail",
        "type": "range",
        "label": "Detail Level",
        "min": 1,
        "max": 10,
        "default": 7
      },
      {
        "id": "style",
        "type": "select",
        "label": "Style",
        "options": [
          {"value": "modern", "label": "Modern Contemporary"},
          {"value": "traditional", "label": "Traditional"},
          {"value": "colonial", "label": "Colonial"},
          {"value": "victorian", "label": "Victorian"},
          {"value": "ranch", "label": "Ranch Style"},
          {"value": "custom", "label": "Custom Design"}
        ],
        "default": "traditional"
      },
      {
        "id": "base-size",
        "type": "select",
        "label": "Base Size",
        "options": [
          {"value": "8x8", "label": "8\" x 8\" (Small)"},
          {"value": "12x12", "label": "12\" x 12\" (Standard)"},
          {"value": "16x16", "label": "16\" x 16\" (Large)"},
          {"value": "20x20", "label": "20\" x 20\" (Premium)"}
        ],
        "default": "12x12"
      },
      {
        "id": "include-trees",
        "type": "checkbox",
        "label": "Trees",
        "default": true
      },
      {
        "id": "include-fence",
        "type": "checkbox",
        "label": "Fence",
        "default": false
      },
      {
        "id": "client-name",
        "type": "text",
        "label": "Client Name",
        "placeholder": "The Johnson Family"
      },
      {
        "id": "closing-date",
        "type": "date",
        "label": "Closing Date"
      }
    ]
  }
}