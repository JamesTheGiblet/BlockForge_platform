{
  "id": "sign-studio",
  "name": "Sign Studio",
  "version": "1.0.0",
  "description": "Create 2D horizontal LEGO signs and nameplates",
  "entry": "sign-studio.js",
  "ui": {
    "tools": [
      {
        "id": "text-input",
        "type": "text",
        "label": "Text Content",
        "placeholder": "Enter text here",
        "maxLength": 12,
        "default": "BLOCKFORGE"
      },
      {
        "id": "size-select",
        "type": "select",
        "label": "Size",
        "options": [
          {"value": "compact", "label": "Compact"},
          {"value": "bold", "label": "Bold"},
          {"value": "large", "label": "Large"}
        ],
        "default": "bold"
      },
      {
        "id": "border-style",
        "type": "select",
        "label": "Border",
        "options": [
          {"value": "thin", "label": "Thin"},
          {"value": "medium", "label": "Medium"},
          {"value": "thick", "label": "Thick"}
        ],
        "default": "medium"
      },
      {
        "id": "text-color-select",
        "type": "select",
        "label": "Text",
        "options": []
      },
      {
        "id": "border-color-select",
        "type": "select",
        "label": "Border",
        "options": []
      },
      {
        "id": "bg-color-select",
        "type": "select",
        "label": "Background",
        "options": []
      }
    ],
    "panels": [
      {
        "id": "preview",
        "title": "Sign Preview",
        "type": "canvas"
      },
      {
        "id": "stats",
        "title": "Brick Count",
        "type": "html"
      }
    ]
  }
}