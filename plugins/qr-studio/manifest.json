{
  "id": "qr-studio",
  "name": "QR Studio",
  "version": "1.0.0",
  "description": "Generate scannable LEGO QR codes",
  "entry": "qr-studio.js",
  "ui": {
    "tools": [
      {
        "id": "qr-type",
        "type": "select",
        "label": "Type",
        "options": [
          {"value": "url", "label": "URL"},
          {"value": "wifi", "label": "WiFi"},
          {"value": "contact", "label": "Contact"},
          {"value": "phone", "label": "Phone"}
        ]
      },
      {
        "id": "qr-data",
        "type": "text",
        "placeholder": "https://blockforge.studio",
        "default": "https://blockforge.studio"
      },
      {
        "id": "grid-size",
        "type": "select",
        "label": "Size",
        "options": [
          {"value": "32", "label": "32x32"},
          {"value": "48", "label": "48x48"}
        ]
      },
      {
        "id": "qr-fg-color",
        "type": "select",
        "label": "Foreground",
        "options": []
      },
      {
        "id": "qr-bg-color",
        "type": "select",
        "label": "Background",
        "options": []
      }
    ]
  }
}